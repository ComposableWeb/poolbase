{
  "name": "poolbase-app",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "yarn dev",
    "dev": "NODE_ENV=development next dev \"src/app\"",
    "serve": "NODE_ENV=production next start \"src/app\"",
    "clean": "find ../../dist/app/functions -mindepth 1 ! -regex '^../../dist/app/functions/node_modules/.*' -delete",
    "build-app": "NODE_ENV=production next build \"src/app\"",
    "build-functions": "tsc --project src/functions",
    "build-public": "cpx \"src/app/public/**/*.*\" \"../../dist/app/functions/public\" -C",
    "preinstall-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"../../dist/app/functions\" -C",
    "install-deps": "cd \"../../dist/app/functions\" && yarn install",
    "prebuild": "yarn clean && yarn preinstall-deps",
    "build": "npm-run-all -s build-*",
    "typecheck-app": "tsc --project src/app",
    "typecheck-functions": "tsc --project src/functions",
    "type-check": "yarn typecheck-app && yarn typecheck-functions",
    "lint-app": "eslint './src/app/'",
    "lint-functions": "eslint -c './src/functions/.eslintrc.js' './src/functions/index.ts'",
    "lint": "npm-run-all -p -r lint-app lint-functions"
  },
  "keywords": [],
  "author": "Andreas Adam <andreas.sahle@gmail.com> (https://pixelmord.de/)",
  "license": "MIT",
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "consola": "^2.11.3",
    "cookie-session": "1.4.0",
    "design-system": "*",
    "dotenv": "8.2.0",
    "firebase": "^7.14.1",
    "firebase-admin": "^8.9.2",
    "firebase-functions": "^3.6.0",
    "formidable": "^1.2.2",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "next": "^9.3.5",
    "next-compose-plugins": "^2.2.0",
    "next-pwa": "^2.3.3",
    "next-transpile-modules": "^3.2.0",
    "puppeteer": "^3.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-firebaseui": "^4.1.0",
    "react-hook-form": "^5.5.1",
    "rxfire": "^3.12.1",
    "rxjs": "^6.5.5",
    "theme-ui": "^0.3.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.1",
    "@types/puppeteer": "^2.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/theme-ui": "^0.3.0",
    "@types/theme-ui__components": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "cpx": "1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.18.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.1",
    "typescript": "^3.7.5"
  }
}
