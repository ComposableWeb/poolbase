{
  "name": "@poolbase/app",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "NODE_ENV=development next dev \"src/app\"",
    "dev": "cd ./src/app && NODE_ENV=development node devServer.js",
    "serve": "NODE_ENV=production next start \"src/app\"",
    "clean": "find ../../dist/app/functions -mindepth 1 ! -regex '^../../dist/app/functions/node_modules/.*' -delete",
    "prebuild-app": "cpx \"../../locales/**/*.*\" \"locales\" -C",
    "build-app": "NODE_ENV=production next build \"src/app\"",
    "build-functions": "tsc --project src/functions",
    "build-public": "cpx \"src/app/public/**/*.*\" \"../../dist/app/functions/public\" -C",
    "preinstall-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"../../dist/app/functions\" -C",
    "install-deps": "cd \"../../dist/app/functions\" && yarn install",
    "prebuild": "yarn clean && yarn preinstall-deps",
    "build": "npm-run-all -s build-*",
    "typecheck-app": "tsc --project src/app",
    "typecheck-functions": "tsc --project src/functions",
    "type-check": "yarn typecheck-app && yarn typecheck-functions",
    "lint-app": "eslint './src/app/'",
    "lint-functions": "eslint -c './src/functions/.eslintrc.js' './src/functions/index.ts'",
    "lint": "npm-run-all -p -r lint-app lint-functions"
  },
  "release": {
    "branch": "master",
    "extends": "semantic-release-monorepo",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "keywords": [
    "pwa",
    "firebase",
    "nextjs",
    "cloud functions"
  ],
  "author": "Andreas Adam <andreas.sahle@gmail.com> (https://pixelmord.de/)",
  "license": "MIT",
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "consola": "^2.11.3",
    "cookie-session": "1.4.0",
    "dotenv": "8.2.0",
    "express": "^4.17.1",
    "firebase": "^7.14.2",
    "firebase-admin": "^8.11.0",
    "firebase-functions": "^3.6.1",
    "formidable": "^1.2.2",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "next": "^9.3.6",
    "next-compose-plugins": "^2.2.0",
    "next-i18next": "^4.3.0",
    "next-pwa": "^2.3.3",
    "next-transpile-modules": "^3.3.0",
    "puppeteer": "^2.1.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-feather": "^2.0.8",
    "react-firebase-hooks": "^2.1.1",
    "react-firebaseui": "^4.1.0",
    "react-hook-form": "^5.6.0",
    "theme-ui": "^0.3.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.4",
    "@types/puppeteer": "^2.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/theme-ui": "^0.3.0",
    "@types/theme-ui__components": "^0.2.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "cpx": "1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.18.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.1",
    "semantic-release": "^17.0.7",
    "semantic-release-monorepo": "^7.0.2",
    "typescript": "^3.7.5"
  }
}
