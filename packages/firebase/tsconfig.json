{
  "compilerOptions": {
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2018"],
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@poolbase/common": ["../common"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
