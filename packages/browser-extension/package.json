{
  "name": "@poolbase/browser-extension",
  "version": "0.0.1",
  "description": "Save to Poolbase browser extension",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production node utils/build.js",
    "start": "NODE_ENV=development node utils/webserver.js",
    "prettier": "prettier --write '**/*.{js,jsx,css,html}'",
    "type-check": "tsc"
  },
  "release": {
    "branch": "master",
    "extends": "semantic-release-monorepo",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "@poolbase/common": "0.0.1",
    "consola": "^2.15.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^2.0.0",
    "i18next": "^19.7.0",
    "i18next-browser-languagedetector": "^6.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-firebase-hooks": "^2.2.0",
    "react-i18next": "^11.7.2"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/chrome": "0.0.122",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/eslint": "^7.2.2",
    "@types/file-loader": "^4.2.0",
    "@types/fs-extra": "^9.0.1",
    "@types/prettier": "^2.1.0",
    "@types/react": "^16.9.48",
    "@types/react-dom": "^16.9.7",
    "@types/semantic-release": "^17.1.0",
    "@types/webpack": "4.41.21",
    "@types/webpack-dev-server": "3.11.0",
    "@types/webpack-merge": "~4.1.5",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.2",
    "eslint": "^7.7.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.0",
    "html-loader": "1.3.0",
    "html-webpack-plugin": "^4.3.0",
    "prettier": "^2.1.1",
    "react-hot-loader": "^4.12.21",
    "semantic-release": "^17.0.7",
    "semantic-release-monorepo": "^7.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.3",
    "typescript": "~4.0.2",
    "webpack": "4.44.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "~5.1.2",
    "write-file-webpack-plugin": "^4.5.1"
  }
}
