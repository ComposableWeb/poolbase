{
  "name": "browser-extension",
  "version": "0.0.0-semantically-released",
  "description": "Save to Poolbase browser extension",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production node utils/build.js",
    "start": "NODE_ENV=development node utils/webserver.js",
    "prettier": "prettier --write '**/*.{js,jsx,css,html}'",
    "type-check": "tsc"
  },
  "release": {
    "branch": "master",
    "extends": "semantic-release-monorepo",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "consola": "^2.11.3",
    "i18next": "^19.4.4",
    "i18next-browser-languagedetector": "^4.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.4.0"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "^16.13.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/chrome": "0.0.106",
    "@types/react": "^16.9.34",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "file-loader": "^6.0.0",
    "fs-extra": "^9.0.0",
    "html-loader": "1.1.0",
    "html-webpack-plugin": "^4.2.1",
    "prettier": "^2.0.5",
    "react-hot-loader": "^4.12.20",
    "semantic-release": "^17.0.7",
    "semantic-release-monorepo": "^7.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.1",
    "typescript": "~3.8.3",
    "webpack": "4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-merge": "~4.2.1",
    "write-file-webpack-plugin": "^4.5.1"
  }
}
