{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "exclude": ["utils", "node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "../../locales/**/*.ts"]
}
