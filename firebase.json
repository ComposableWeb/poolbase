{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "dist/app/functions",
    "predeploy": ["npx lerna --scope poolbase-app run build"]
  },
  "hosting": [
    {
      "target": "app",
      "public": "dist/app/public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**/**",
          "function": "next"
        }
      ],
      "predeploy": "npx lerna --scope poolbase-app run build-public"
    },
    {
      "target": "landing",
      "public": "dist/landing/public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "predeploy": "npx lerna --scope poolbase-landing run build"
    }
  ]
}
