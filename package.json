    "build-if-changed": "^1.5.5",
    "cross-env": "7.0.2",
    "docsify": "^4.10.2",
    "docsify-cli": "^4.4.0",
    "dotenv-cli": "^3.1.0",
    "firebase-tools": "^8.1.1",
    "lerna": "^3.20.2"
  }
}
