{
  "name": "poolbase",
  "version": "0.1.0",
  "description": "Information pool for groups and companies",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "main": "n/a",
  "scripts": {
    "build": "bic",
    "deploy": "firebase deploy",
    "install-deps": "cd \"dist/app/functions\" && yarn install",
